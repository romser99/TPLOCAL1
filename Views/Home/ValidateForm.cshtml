@model TPLOCAL1.Models.PersonalInfo
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/resources/Form.css" />
    <title>Validation Formulaire</title>
</head>
<body>
    @Html.Partial("_Header")

    @Html.Partial("_Navigation")
    
    <section>
        <!-- Message confirmation -->
        <h2 style="text-align: center;">Votre formulaire a bien été pris en compte</h2>

        <!-- Display the submitted data -->
        <table border="1">
            <!-- Title row -->
            <tr>
                <th colspan="2" style="text-align: center;">Informations personnelles</th>
            </tr>

            <!-- Display the data in the table -->
            <tr>
                <td>Nom</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>@Model.Forename</td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <td>Code postal</td>
                <td>@Model.ZipCode</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>@Model.Town</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Model.Email</td>
            </tr>
        </table>

        <!-- Display the training information -->
        <table border="1">
            <!-- Title row -->
            <tr>
                <th colspan="2" style="text-align: center;">Informations formation suivie</th>
            </tr>

            <tr>
                <td>Date début formation</td>
                <td>@Model.StartDate.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>@Model.TrainingType</td>
            </tr>
        </table>

        <!-- Display the review and purpose of training -->
        <table border="1">
            <!-- Title row -->
            <tr>
                <th colspan="2" style="text-align: center;">Avis sur la formation</th>
            </tr>

            <tr>
                <td>Avis sur la formation</td>
                <td>@Model.Review</td>
            </tr>
            <tr>
                <td>Objectif de la formation</td>
                <td>@Model.TrainingPurpose</td>
            </tr>
        </table>
    </section>
</body>

</html>